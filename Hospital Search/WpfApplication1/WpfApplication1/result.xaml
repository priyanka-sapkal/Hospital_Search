    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="#FF5EC2CB"/>
        </RadialGradientBrush>
    </Window.Background>
    <Grid Background="#FFFBFBFB">
        <Grid.ColumnDefinitions>
