        </Label>
        <Label Content="Label" HorizontalAlignment="Left" Margin="401,1,0,0" VerticalAlignment="Top" Height="274" Width="270" Grid.Row="1" Grid.Column="2">
            <Label.Background>
                <ImageBrush ImageSource="D:\Project UI images\healthcare-global.jpg"/>
