        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="338" Margin="57,285,0,0" VerticalAlignment="Top" Width="276" Grid.Row="1" Grid.RowSpan="2" Grid.Column="2">
